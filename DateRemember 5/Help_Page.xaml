                    <InlineUIContainer>
                        <Image Source="Assets/Captura6.PNG" Margin="0,5,0,5" />
                    </InlineUIContainer>
                </Paragraph >
                <Paragraph x:Name="paragraph8"  FontFamily="Segoe UI" FontSize="16" TextAlignment="Justify">
                    <Run Text ="{Binding text_8}"/>
                </Paragraph>
            </RichTextBlock>
        </ScrollViewer>
        
    </Grid>
</Page>
